<Window x:Class="Draft.View.EditCount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Draft.View"
        mc:Ignorable="d"
        Title="EditCount" Height="450" Width="800">
    <StackPanel>
        <TextBox Text="{Binding MinCountValue}" Width="100"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Отмена" Width="100" Click="Button_Click"/>
            <Button Content="Сохранить" Width="100" Command="{Binding SaveCount}"/>
        </StackPanel>
    </StackPanel>
</Window>
